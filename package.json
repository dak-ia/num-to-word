{
  "name": "num-to-word",
  "version": "0.1.0",
  "description": "Convert numbers to words in multiple languages (English, Japanese, SI prefixes)",
  "keywords": [
    "number",
    "word",
    "conversion",
    "i18n",
    "english",
    "japanese",
    "si-prefix",
    "number-to-words"
  ],
  "homepage": "https://github.com/dak-ia/NumToWord.js#readme",
  "bugs": {
    "url": "https://github.com/dak-ia/NumToWord.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dak-ia/NumToWord.js.git"
  },
  "license": "MIT",
  "author": "dak-ia",
  "main": "./dist/NumToWord.cjs",
  "module": "./dist/NumToWord.mjs",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./dist/NumToWord.cjs",
      "import": "./dist/NumToWord.mjs"
    }
  },
  "files": [
    "dist",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "vite": "^7.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "lint-staged": {
    "*.{js,json,md}": "prettier --write"
  }
}
