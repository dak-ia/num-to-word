{
  "name": "@dak-ia/num-to-word",
  "version": "0.2.0",
  "type": "module",
  "description": "Convert numbers to words in multiple languages (English, Japanese, SI prefixes)",
  "keywords": [
    "number",
    "word",
    "conversion",
    "i18n",
    "english",
    "japanese",
    "si-prefix",
    "number-to-words"
  ],
  "homepage": "https://github.com/dak-ia/num-to-word#readme",
  "bugs": {
    "url": "https://github.com/dak-ia/num-to-word/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dak-ia/num-to-word.git"
  },
  "license": "MIT",
  "author": "dak-ia",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build && tsc",
    "preview": "vite preview",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,html,css,scss}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.39",
    "@types/jest": "30.0.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md,html,css,scss}": [
      "prettier --write",
      "eslint . --fix"
    ],
    "src/**/*.{ts,tsx}": [
      "bash -c 'tsc --noEmit --project tsconfig.json'"
    ]
  }
}
